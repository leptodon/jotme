<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/ib_bold_text"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_format_bold_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/ib_italic_text"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_format_italic_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/ib_text_format"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_text_format_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/ib_preview"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_remove_red_eye_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <ru.cactus.jotme.ui.custom.CustomEditText
            android:id="@+id/custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="@color/black"/>
    </LinearLayout>
</layout>
